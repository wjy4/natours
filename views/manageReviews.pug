extends base

block content
  .section-admin
    a.btn.btn--white(href='/me') ‚Üê Back to Account

    h2.heading-secondary.u-margin-bottom-medium Manage Reviews

    .form-layout
      each r in reviews
        if r && r._id
          .form-card
            .form-info
              p
                strong Review:
                |  #{r.review}
              p
                strong Rating:
                |  #{r.rating}
              p
                strong User:
                |  #{r.user?.name || 'Unknown'}
              p
                strong Tour:
                |  #{r.tour?.name || 'Unknown'}
            .form-actions
              button.btn.btn--red(data-id=r._id) Delete

