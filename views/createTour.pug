extends base

block content
  .section-tours
    .u-center-text.u-margin-bottom-big
      h2.heading-secondary Create New Tour

    .row
      form#form-create.form(method='POST', enctype='multipart/form-data')

        /* --- 基础字段 --- */
        .form__group
          label.form__label(for='name') Name
          input#name.form__input(type='text', name='name', required=true)

        .form__group
          label.form__label(for='duration') Duration (days)
          input#duration.form__input(type='number', name='duration', required=true)

        .form__group
          label.form__label(for='maxGroupSize') Max Group Size
          input#maxGroupSize.form__input(type='number', name='maxGroupSize', required=true)

        .form__group
          label.form__label(for='difficulty') Difficulty
          select#difficulty.form__input(name='difficulty', required=true)
            option(value='easy') Easy
            option(value='medium') Medium
            option(value='difficult') Difficult

        .form__group
          label.form__label(for='price') Price (£)
          input#price.form__input(type='number', name='price', required=true)

        .form__group
          label.form__label(for='priceDiscount') Price Discount (£)
          input#priceDiscount.form__input(type='number', name='priceDiscount')

        .form__group
          label.form__label(for='summary') Summary
          input#summary.form__input(type='text', name='summary', required=true)

        .form__group
          label.form__label(for='description') Description
          textarea#description.form__input(name='description', rows='4')

        /* --- 日期字段 --- */
        .form__group
          label.form__label(for='startDates') Start Dates (comma separated)
          input#startDates.form__input(type='text', name='startDates')

        /* --- 地理位置 Start Location --- */
        .form__group
          label.form__label(for='startLocationDescription') Start Location Description
          input#startLocationDescription.form__input(type='text', name='startLocationDescription')

        .form__group
          label.form__label(for='startLocationAddress') Start Location Address
          input#startLocationAddress.form__input(type='text', name='startLocationAddress')

        .form__group
          label.form__label(for='startLocationLatitude') Start Location Latitude
          input#startLocationLatitude.form__input(type='number', name='startLocationLatitude', step="any")

        .form__group
          label.form__label(for='startLocationLongitude') Start Location Longitude
          input#startLocationLongitude.form__input(type='number', name='startLocationLongitude', step="any")

        /* --- 是否Secret Tour --- */
        .form__group
          label.form__label(for='secretTour') Secret Tour
          select#secretTour.form__input(name='secretTour')
            option(value='false') No
            option(value='true') Yes

        /* --- 封面图片 Cover Image --- */
        .form__group
          label.form__label Cover Image
          .custom-file-upload
            label(for='imageCover') Choose Cover Image
            input#imageCover(type='file', name='imageCover', accept='image/*', style='display:none;' required=true)
          img#preview-cover(src='', alt='Cover Preview', style='display:none; max-width: 200px; margin-top: 1rem;')

        /* --- 其他图片 Other Images --- */
        .form__group
          label.form__label Other Images
          .custom-file-upload
            label(for='images') Choose Other Images
            input#images(type='file', name='images', accept='image/*', multiple=true data-max='3' style='display:none;')
          .preview-images(style='margin-top: 1rem; display:flex; flex-wrap:wrap; gap:10px;')

        /* --- 指定Guides --- */
        .form__group
          label.form__label(for='guides') Guides (comma separated User IDs)
          input#guides.form__input(type='text', name='guides')

        /* --- 提交按钮 --- */
        .form__group.right
          button.btn.btn--green#btn-create-tour(type='button') Create Tour
