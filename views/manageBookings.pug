extends base

block content
  .section-admin
    a.btn.btn--white(href='/me') ← Back to Account

    h2.heading-secondary.u-margin-bottom-medium Manage Bookings

    .form-layout
      each b in bookings
        if b && b._id
          .form-card
            .form-info
              p
                strong Tour:
                |  #{b.tour?.name || 'Unknown Tour'}
              p
                strong User:
                |  #{b.user?.name || 'Unknown User'} (#{b.user?.email || 'N/A'})
              p
                strong Price:
                |  £#{b.price}
            .form-actions
              button.btn.btn--red(data-id=b._id) Delete
